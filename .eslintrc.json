{
    "root": true,
	"extends": [
		"plugin:prettier/recommended"
	],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
		"prettier",
        "@typescript-eslint"
    ],
    "rules": {
		"prettier/prettier": "error",
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": ["warn", "smart"],
        "no-throw-literal": "warn",
        "semi": "off"
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}
